---
import AppLayout from "../../layout/app-layout.astro";
---

<AppLayout>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <style>
        /* Login Section Styles */
        .login-section {
            padding: 120px 0 80px;
            min-height: 100vh;
            display: flex;
            align-items: center;
            background-color: #f5f5f5;
        }

        .login-container {
            display: flex;
            justify-content: space-between;
            max-width: 1000px;
            margin: 0 auto;
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
            overflow: hidden;
        }

        .login-image {
            flex: 1;
            background: url('/storage/background_Bersekolah[1].jpg') center/cover;
            position: relative;
            display: flex;
            flex-direction: column;
            justify-content: flex-end;
            padding: 40px;
            min-height: 400px;
        }

        .login-image::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(to top, rgba(64, 99, 134, 0.8), rgba(64, 99, 134, 0.4));
        }

        .login-image-content {
            position: relative;
            color: #ffffff;
        }

        .login-image-content h2 {
            font-size: 28px;
            margin-bottom: 15px;
        }

        .login-image-content p {
            font-size: 16px;
            margin-bottom: 20px;
        }

        .login-form-container {
            flex: 1;
            padding: 50px 40px;
        }

        .login-form-header {
            margin-bottom: 30px;
            text-align: center;
        }

        .login-form-header h2 {
            font-size: 28px;
            color: #406386;
            margin-bottom: 10px;
        }

        .login-form-header p {
            color: #666666;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-group label {
            display: block;
            margin-bottom: 8px;
            font-weight: 500;
            color: #333333;
        }

        .form-group input {
            width: 100%;
            padding: 12px 15px;
            border: 1px solid #dddddd;
            border-radius: 6px;
            font-size: 16px;
            transition: border-color 0.3s;
        }

        .form-group input:focus {
            border-color: #406386;
            outline: none;
        }

        .remember-forgot {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 25px;
        }

        .remember-me {
            display: flex;
            align-items: center;
        }

        .remember-me input {
            margin-right: 8px;
        }

        .forgot-password a {
            color: #406386;
            text-decoration: none;
            font-size: 14px;
        }

        .forgot-password a:hover {
            text-decoration: underline;
        }

        .btn {
            background-color: #406386;
            color: #ffffff;
            padding: 12px 24px;
            border-radius: 50px;
            text-decoration: none;
            font-weight: 600;
            transition: background-color 0.3s, transform 0.3s;
            border: none;
            cursor: pointer;
            display: inline-block;
        }

        .btn:hover {
            background-color: #2c4a6e;
            transform: translateY(-2px);
        }

        .login-button {
            width: 100%;
            padding: 14px;
            font-size: 16px;
            text-align: center;
        }

        .or-divider {
            display: flex;
            align-items: center;
            margin: 25px 0;
            color: #666666;
        }

        .or-divider::before,
        .or-divider::after {
            content: '';
            flex: 1;
            height: 1px;
            background-color: #dddddd;
        }

        .or-divider span {
            padding: 0 15px;
        }

        .social-login {
            display: flex;
            justify-content: center;
            gap: 15px;
            margin-bottom: 25px;
        }

        .social-btn {
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 12px 20px;
            border-radius: 6px;
            border: 1px solid #dddddd;
            background-color: #ffffff;
            color: #333333;
            text-decoration: none;
            transition: background-color 0.3s;
            width: 50%;
        }

        .social-btn i {
            margin-right: 10px;
        }

        .social-btn.google:hover {
            background-color: #f2f2f2;
        }

        .social-btn.facebook {
            background-color: #1877f2;
            color: #ffffff;
            border: none;
        }

        .social-btn.facebook:hover {
            background-color: #166fe5;
        }

        .register-link {
            text-align: center;
            margin-top: 20px;
            color: #666666;
            font-size: 14px;
        }

        .register-link a {
            color: #406386;
            text-decoration: none;
            font-weight: 600;
        }

        .register-link a:hover {
            text-decoration: underline;
        }

        .container {
            width: 90%;
            max-width: 1200px;
            margin: 0 auto;
        }

        /* Responsive Styles */
        @media (max-width: 900px) {
            .login-container {
                flex-direction: column;
                max-width: 500px;
            }
            
            .login-image {
                min-height: 200px;
            }
        }

        @media (max-width: 768px) {
            .login-image-content h2 {
                font-size: 24px;
            }
        }
    </style>

    <!-- Login Section -->
    <section class="login-section">
        <div class="container">
            <div class="login-container">
                <div class="login-image">
                    <div class="login-image-content">
                        <h2>Selamat Datang Kembali</h2>
                        <p>Masuk untuk melanjutkan perjalanan pendidikan bersama Bersekolah. Bersama-sama kita buka pintu masa depan untuk generasi penerus bangsa.</p>
                    </div>
                </div>
                <div class="login-form-container">
                    <div class="login-form-header">
                        <h2>Masuk ke Akun Anda</h2>
                        <p>Masukkan detail akun Anda untuk melanjutkan</p>
                    </div>
                    <form action="#" method="post">
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="email" id="email" name="email" placeholder="Masukkan email Anda" required>
                        </div>
                        <div class="form-group">
                            <label for="password">Kata Sandi</label>
                            <input type="password" id="password" name="password" placeholder="Masukkan kata sandi Anda" required>
                        </div>
                        <div class="remember-forgot">
                            <div class="remember-me">
                                <input type="checkbox" id="remember" name="remember">
                                <label for="remember">Ingat saya</label>
                            </div>
                            <div class="forgot-password">
                                <a href="#">Lupa kata sandi?</a>
                            </div>
                        </div>
                        <button type="submit" class="btn login-button">Masuk</button>
                        <div class="or-divider">
                            <span>atau</span>
                        </div>
                        <div class="social-login">
                            <a href="#" class="social-btn google">
                                <i class="fab fa-google"></i> Google
                            </a>
                            <a href="#" class="social-btn facebook">
                                <i class="fab fa-facebook-f"></i> Facebook
                            </a>
                        </div>
                        <div class="register-link">
                            Belum memiliki akun? <a href="/auth/register">Daftar sekarang</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
</AppLayout>
