<script>
import { ApplicantService } from '../../../lib/applicant-service';

const getApplicantId = () => {
  const path = window.location.pathname;
  const matches = path.match(/\/dashboard\/pendaftar-beasiswa\/(\w+)\/edit/);
  return matches ? matches[1] : null;
};

document.addEventListener('DOMContentLoaded', async () => {
  const id = getApplicantId();
  if (!id) {
    alert('Invalid applicant ID');
    window.location.href = '/dashboard/pendaftar-beasiswa';
    return;
  }

  const form = document.getElementById('beswan-form') as HTMLFormElement;
  const submitButton = form.querySelector('button[type="submit"]') as HTMLButtonElement;
  
  const setLoading = (isLoading: boolean) => {
    submitButton.disabled = isLoading;
    submitButton.innerHTML = isLoading ? 'Menyimpan...' : 'Update Data Pendaftar';
  };

  const showError = (message: string) => {
    const errorDiv = document.createElement('div');
    errorDiv.className = 'p-4 mb-4 text-sm text-red-700 bg-red-100 rounded-lg';
    errorDiv.textContent = message;
    form.insertBefore(errorDiv, form.firstChild);
    setTimeout(() => errorDiv.remove(), 5000);
  };

  const validateForm = (data: any) => {
    if (data.gpa < 0 || data.gpa > 4) {
      throw new Error('IPK harus berada di antara 0 dan 4');
    }
    if (data.semester < 1 || data.semester > 14) {
      throw new Error('Semester harus berada di antara 1 dan 14');
    }
    if (!data.email.includes('@')) {
      throw new Error('Email tidak valid');
    }
    if (data.phone.length < 10 || data.phone.length > 15) {
      throw new Error('Nomor telepon tidak valid');
    }
  };

  try {
    // Show loading state while fetching data
    form.innerHTML = `
      <div class="flex items-center justify-center p-6">
        <div class="text-center">
          <div class="w-8 h-8 border-4 border-t-[#406386] border-r-transparent border-b-[#406386] border-l-transparent rounded-full animate-spin"></div>
          <p class="mt-2 text-gray-600">Memuat data...</p>
        </div>
      </div>
    `;

    // Fetch existing data
    const applicant = await ApplicantService.getBeswanList().then(list => 
      list.find(a => a.id === id)
    );

    if (!applicant) {
      throw new Error('Data pendaftar tidak ditemukan');
    }
    
    // Restore form content and populate data
    form.innerHTML = document.getElementById('form-template')?.innerHTML || '';
    
    // Populate form
    (form.elements.namedItem('name') as HTMLInputElement).value = applicant.name;
    (form.elements.namedItem('email') as HTMLInputElement).value = applicant.email;
    (form.elements.namedItem('phone') as HTMLInputElement).value = applicant.phone;
    (form.elements.namedItem('university') as HTMLInputElement).value = applicant.university;
    (form.elements.namedItem('program') as HTMLSelectElement).value = applicant.program;
    (form.elements.namedItem('gpa') as HTMLInputElement).value = applicant.gpa.toString();
    (form.elements.namedItem('semester') as HTMLInputElement).value = applicant.semester.toString();
    (form.elements.namedItem('major') as HTMLInputElement).value = applicant.major;
    (form.elements.namedItem('status') as HTMLSelectElement).value = applicant.status;
    (form.elements.namedItem('address') as HTMLTextAreaElement).value = applicant.address;

    // Handle form submission
    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      try {
        setLoading(true);

        const formData = new FormData(form);
        const applicantData = {
          name: (formData.get('name') ?? '').toString().trim(),
          email: (formData.get('email') ?? '').toString().trim(),
          phone: (formData.get('phone') ?? '').toString().trim(),
          university: (formData.get('university') ?? '').toString().trim(),
          program: (formData.get('program') ?? '').toString(),
          gpa: parseFloat((formData.get('gpa') ?? '0').toString()),
          semester: parseInt((formData.get('semester') ?? '1').toString()),
          major: (formData.get('major') ?? '').toString().trim(),
          address: (formData.get('address') ?? '').toString().trim(),
          status: (formData.get('status') ?? 'pending') as 'pending' | 'accepted' | 'rejected'
        };

        // Validate form data
        validateForm(applicantData);

        // Submit to server
        await ApplicantService.createBeswan(applicantData);
        
        // Show success message and redirect
        const params = new URLSearchParams({ message: 'Data pendaftar berhasil diperbarui' });
        window.location.href = `/dashboard/pendaftar-beasiswa?${params.toString()}`;
      } catch (error) {
        const message = error instanceof Error ? error.message : 'Gagal memperbarui data pendaftar';
        console.error('Failed to update applicant:', error);
        showError(message);
        setLoading(false);
      }
    });
  } catch (error) {
    const message = error instanceof Error ? error.message : 'Gagal memuat data pendaftar';
    console.error('Failed to load applicant:', error);
    showError(message);
    // Redirect back after showing error
    setTimeout(() => {
      window.location.href = '/dashboard/pendaftar-beasiswa';
    }, 3000);
  }
});
</script>
