---
import DashboardAdmin from "../../../layouts/dashboard-admin.astro";
import { Card, CardHeader, CardTitle, CardContent } from "../../../components/ui/card";
import { Button } from "../../../components/ui/button";

---

<DashboardAdmin>
  <div class="p-6 space-y-6">
    <div class="flex items-center justify-between">
      <h1 class="text-2xl font-bold">Edit Data Pendaftar</h1>
      <a href="/dashboard/pendaftar-beasiswa">
        <Button variant="outline">Kembali</Button>
      </a>
    </div>

    <Card>
      <CardHeader>
        <CardTitle>Form Edit Data Pendaftar</CardTitle>
      </CardHeader>
      <CardContent>
        <form id="beswan-form" class="space-y-6">
          <div class="grid gap-4 md:grid-cols-2">
            <div class="space-y-2">
              <label for="name" class="text-sm font-medium">Nama Lengkap</label>
              <input 
                id="name"
                name="name"
                type="text"
                class="w-full px-3 py-2 border rounded-md"
                required
              />
            </div>

            <div class="space-y-2">
              <label for="email" class="text-sm font-medium">Email</label>
              <input 
                id="email"
                name="email"
                type="email"
                class="w-full px-3 py-2 border rounded-md"
                required
              />
            </div>

            <div class="space-y-2">
              <label for="phone" class="text-sm font-medium">Nomor Telepon</label>
              <input 
                id="phone"
                name="phone"
                type="tel"
                class="w-full px-3 py-2 border rounded-md"
                required
              />
            </div>

            <div class="space-y-2">
              <label for="university" class="text-sm font-medium">Universitas</label>
              <input 
                id="university"
                name="university"
                type="text"
                class="w-full px-3 py-2 border rounded-md"
                required
              />
            </div>

            <div class="space-y-2">
              <label for="program" class="text-sm font-medium">Program Beasiswa</label>
              <select 
                id="program"
                name="program"
                class="w-full px-3 py-2 border rounded-md"
                required
              >
                <option value="Beasiswa Penuh">Beasiswa Penuh</option>
                <option value="Beasiswa Parsial">Beasiswa Parsial</option>
              </select>
            </div>

            <div class="space-y-2">
              <label for="gpa" class="text-sm font-medium">IPK</label>
              <input 
                id="gpa"
                name="gpa"
                type="number"
                step="0.01"
                min="0"
                max="4"
                class="w-full px-3 py-2 border rounded-md"
                required
              />
            </div>

            <div class="space-y-2">
              <label for="semester" class="text-sm font-medium">Semester</label>
              <input 
                id="semester"
                name="semester"
                type="number"
                min="1"
                max="14"
                class="w-full px-3 py-2 border rounded-md"
                required
              />
            </div>

            <div class="space-y-2">
              <label for="major" class="text-sm font-medium">Program Studi</label>
              <input 
                id="major"
                name="major"
                type="text"
                class="w-full px-3 py-2 border rounded-md"
                required
              />
            </div>

            <div class="space-y-2">
              <label for="status" class="text-sm font-medium">Status</label>
              <select 
                id="status"
                name="status"
                class="w-full px-3 py-2 border rounded-md"
                required
              >
                <option value="pending">Pending</option>
                <option value="accepted">Diterima</option>
                <option value="rejected">Ditolak</option>
              </select>
            </div>
          </div>

          <div class="space-y-2">
            <label for="address" class="text-sm font-medium">Alamat</label>
            <textarea 
              id="address"
              name="address"
              rows="3"
              class="w-full px-3 py-2 border rounded-md"
              required
            ></textarea>
          </div>

          <div>
            <Button type="submit" variant="default" className="bg-[#406386]">
              Update Data Pendaftar
            </Button>
          </div>
        </form>
      </CardContent>
    </Card>
  </div>
</DashboardAdmin>

